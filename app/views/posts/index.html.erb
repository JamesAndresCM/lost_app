<h2 class="shadow-style title-post"><%= title if defined?(title) %></h1>
<div class="card-columns">
  <% cache post do %>
    <%= render post, cached: true %>
  <% end %>
</div>
<br>
<div class="mt-2">
  <% unless post.empty? or post.nil? %>
    <%= will_paginate post, renderer: WillPaginate::ActionView::BootstrapLinkRenderer, list_classes: %w(pagination justify-content-center) %>
  <% end %>
</div>
